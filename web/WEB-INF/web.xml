<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>WebLab2</display-name>
    
    <servlet>
        <servlet-name>controllerServlet</servlet-name>
        <servlet-class>Main.ControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controllerServlet</servlet-name>
        <url-pattern>/checkPoint</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>areaCheckServlet</servlet-name>
        <servlet-class>Main.AreaCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>areaCheckServlet</servlet-name>
        <url-pattern>/areaCheckServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleter</servlet-name>
        <servlet-class>Main.Deleter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleter</servlet-name>
        <url-pattern>/deleter</url-pattern>
    </servlet-mapping>

</web-app>